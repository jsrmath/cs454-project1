program bin
  pre  0 <= N
  pre  forall j k, (0 <= j && j <= k && k < N) ==> a[j] <= a[k]
  post a[i] = x || i = -1 && forall j, (0 <= j && j < N) ==> a[j] != x
is
  low, high := 0, N;

  while low < high && a[i] != x
  	inv 0 <= low && low <= high && high <= N
  	inv forall j, 0 <= j && j < N && !(low <= j && j < high) ==> a[j] != x
  do
  	i := (low + high) / 2;
  	if a[i] < x then
  		low := i + 1;
  	else
  		if x < a[i] then
  			high := i;
  		end
  	end
  end

  if a[i] != x then
  	i := -1;
  end
end
